{erl_opts, [
    warnings_as_errors,
    {platform_define, "^R1[0-5]", no_otp_crypto_hash}
]}.
{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.

{xref_checks, [undefined_function_calls]}.

{deps, [
    {mochiweb, ".*", {git, "git://github.com/basho/mochiweb.git", {branch, "master"}}},
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}}
]}.

{dev_only_deps, [
    {ibrowse, ".*", {git, "git://github.com/cmullaparthi/ibrowse.git", {branch, "master"}}},
    {meck, ".*", {git, "git://github.com/basho/meck.git", {branch, "feature/otp-17"}}}
]}.
